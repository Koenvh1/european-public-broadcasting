    <div class="row">
        <ul class="list-group list-group-horizontal series-episodes mt-4" style="flex-direction: row; flex-wrap: wrap;">

        </ul>
        <button class="btn btn-primary mt-2 series-previous">Previous</button>
        <button class="btn btn-primary mt-2 float-right series-next">Next</button>
    </div>
    -->
</div>

{% include "components/series-modal.twig" %}

<script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
<script src="https://cdn.dashjs.org/latest/dash.all.min.js"></script>
<script src="js/vendor.js"></script>
<script src="js/app.js"></script>

<script>
    let p = new Player();
    p.load().then(() => {
        let a = new Programmes();
        $(".series-item").data("id", p.series);
        a.load();
    });

    const videoInfo = (callback) => {
        p.videoInfo(callback);
    }
</script>
</body>
</html>